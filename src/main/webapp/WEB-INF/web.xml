<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://java.sun.com/xml/ns/javaee" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd" version="2.5">
  <display-name>Archetype Created Web Application</display-name>
  <context-param>
    <param-name>ListenAddress</param-name>
    <param-value>127.0.0.1</param-value>
  </context-param>
  <context-param>
    <param-name>ImagePort</param-name>
    <param-value>50000</param-value>
  </context-param>
  <context-param>
    <param-name>CtlPort</param-name>
    <param-value>50001</param-value>
  </context-param>
  <context-param>
    <param-name>ReportPort</param-name>
    <param-value>50002</param-value>
  </context-param>
  <context-param>
    <param-name>user-timeout</param-name>
    <param-value>20</param-value>
  </context-param>
  <context-param>
    <param-name>report-timeout</param-name>
    <param-value>20</param-value>
  </context-param>
  <context-param>
    <param-name>redis-address</param-name>
    <param-value>127.0.0.1</param-value>
  </context-param>
  <context-param>
    <param-name>redis-port</param-name>
    <param-value>6379</param-value>
  </context-param>
  <context-param>
    <param-name>redis-passwd</param-name>
    <param-value>jetsen</param-value>
  </context-param>
  <listener>
    <listener-class>com.rouies.remotedesktop.ctx.AppListener</listener-class>
  </listener>
  <servlet>
    <description></description>
    <display-name>RemoteDesktopControl</display-name>
    <servlet-name>RemoteDesktopControl</servlet-name>
    <servlet-class>com.rouies.remotedesktop.network.RemoteDesktopControl</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>RemoteDesktopControl</servlet-name>
    <url-pattern>/RemoteDesktopControl</url-pattern>
  </servlet-mapping>
  <servlet>
    <description></description>
    <display-name>SyncRemoteDesktopControl</display-name>
    <servlet-name>SyncRemoteDesktopControl</servlet-name>
    <servlet-class>com.rouies.remotedesktop.network.SyncRemoteDesktopControl</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>SyncRemoteDesktopControl</servlet-name>
    <url-pattern>/SyncRemoteDesktopControl</url-pattern>
  </servlet-mapping>
</web-app>